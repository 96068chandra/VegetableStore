@model List<VegetableStore.Models.Products>
@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<div class="row">
    <div class="col-md-auto">
        <table class="table table-c table-hover">
            <tr>
                <th>
                    Id
                </th>
                <th> Product Name</th>
                <th>Price</th>
                <th>Qunatity</th>
                <th>Discount</th>
                <th>Total Price</th>

            </tr>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>@c.Price</td>
                    <td>@c.Qunatity</td>
                    <td>@c.Discount</td>
                    <td>@c.TotalPrice</td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="col-md-5">
    @Html.ActionLink("Add New", "Create", "Products", null, new { @class = "btn btn-info" })
</div>
